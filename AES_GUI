import javax.swing.*;
import java.awt.*;
import java.util.*;

public class AES_GUI extends JFrame {
    private JTextArea plaintextArea;
    private JTextField keyField;
    private JTextArea outputArea;
    private java.util.List<byte[][]> allEncryptedStates = new ArrayList<>();
    private byte[][] roundKeys;

    public final_AES_GUI() {
        setTitle("AES Encryption Tool");
        setSize(600, 500);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);
        setLayout(new BorderLayout(10, 10));

        // plaintext part
        JPanel topPanel = new JPanel(new BorderLayout(5, 5));
        topPanel.setBorder(BorderFactory.createEmptyBorder(10, 10, 5, 10));
        topPanel.add(new JLabel("Enter Text:"), BorderLayout.NORTH);
        plaintextArea = new JTextArea(4, 40);
        plaintextArea.setLineWrap(true);
        topPanel.add(new JScrollPane(plaintextArea), BorderLayout.CENTER);

        // key part
        JPanel middlePanel = new JPanel(new FlowLayout());
        middlePanel.add(new JLabel("Key (16 chars):"));
        keyField = new JTextField(16);
        middlePanel.add(keyField);

        JButton encryptBtn = new JButton("Encrypt");
        JButton decryptBtn = new JButton("Decrypt");
        JButton clearBtn = new JButton("Clear");
        middlePanel.add(encryptBtn);
        middlePanel.add(decryptBtn);
        middlePanel.add(clearBtn);

        // Output part
        JPanel bottomPanel = new JPanel(new BorderLayout(5, 5));
        bottomPanel.setBorder(BorderFactory.createEmptyBorder(5, 10, 10, 10));
        bottomPanel.add(new JLabel("Output:"), BorderLayout.NORTH);
        outputArea = new JTextArea(10, 40);
        bottomPanel.add(new JScrollPane(outputArea), BorderLayout.CENTER);

        add(topPanel, BorderLayout.NORTH);
        add(middlePanel, BorderLayout.CENTER);
        add(bottomPanel, BorderLayout.SOUTH);

        // actions
        encryptBtn.addActionListener(e -> encrypt());
        decryptBtn.addActionListener(e -> decrypt());
        clearBtn.addActionListener(e -> {
            plaintextArea.setText("");
            keyField.setText("");
            outputArea.setText("");
            allEncryptedStates.clear();
            roundKeys = null;
        });
    }

    private static byte[] hexToBytes(String hex) {
        byte[] bytes = new byte[hex.length() / 2];
        for (int i = 0; i < hex.length(); i += 2) {
            bytes[i / 2] = (byte) Integer.parseInt(hex.substring(i, i + 2), 16);
        }
        return bytes;
    }

    private void encrypt() {
        String plaintext = plaintextArea.getText();
        String key = keyField.getText();

        if (plaintext.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please enter text!");
            return;
        }
        if (key.length() != 32) {
            JOptionPane.showMessageDialog(this, "Key must be 32 hex characters ");
            return;
        }

        if (!key.matches("[0-9A-Fa-f]{32}")) {
            JOptionPane.showMessageDialog(this, "Key must contain only hex characters ");
            return;
        } // 2B7E151628AED2A6ABF7158809CF4F3C

        try {
            allEncryptedStates.clear();
            byte[] keyBytes = hexToBytes(key);
            roundKeys = generateRoundKeys(keyBytes);

            //////////////// plaintext /////////////////////
            java.util.List<String> blocks = new ArrayList<>();
            for (int i = 0; i < plaintext.length(); i += 16) {
                String block = plaintext.substring(i, Math.min(i + 16, plaintext.length()));
                while (block.length() < 16)
                    block += "#";
                blocks.add(block);
            }

            StringBuilder result = new StringBuilder();
            for (int i = 0; i < blocks.size(); i++) {
                result.append("Block " + (i + 1) + ": " + blocks.get(i) + "\n");
            }
            result.append("\n");

            for (int b = 0; b < blocks.size(); b++) { // putting plaintext blocks in a byte aaray to make aes
                byte[] block = blocks.get(b).getBytes();
                byte[][] state = new byte[4][4];

                // turn plaintext block into state matrix
                for (int c = 0; c < 4; c++)
                    for (int r = 0; r < 4; r++)
                        state[r][c] = block[c * 4 + r];

                // initial key addition
                for (int r = 0; r < 4; r++)
                    for (int c = 0; c < 4; c++)
                        state[r][c] ^= keyBytes[c * 4 + r];

                for (int round = 1; round <= 9; round++) {
                    Byte_Sub(state);
                    shiftRows(state);
                    mixColumns(state);
                    addRoundKey(state, roundKeys, round);
                }

                Byte_Sub(state);
                shiftRows(state);
                addRoundKey(state, roundKeys, 10);

                // save encrypted state to use it in gui later
                byte[][] savedState = new byte[4][4];
                for (int r = 0; r < 4; r++)
                    for (int c = 0; c < 4; c++)
                        savedState[r][c] = state[r][c];
                allEncryptedStates.add(savedState);

                for (int c = 0; c < 4; c++)
                    for (int r = 0; r < 4; r++)
                        result.append(String.format("%02X ", state[r][c] & 0xFF));
                result.append("\n");

            }

            outputArea.setText(result.toString());

        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, "Error: " + ex.getMessage());
        }
    }

    private void decrypt() {

        try {
            StringBuilder result = new StringBuilder();

            for (int b = 0; b < allEncryptedStates.size(); b++) {
                byte[][] state = new byte[4][4];

                for (int r = 0; r < 4; r++)
                    for (int c = 0; c < 4; c++)
                        state[r][c] = allEncryptedStates.get(b)[r][c];

                decryption(state, roundKeys);

                result.append("Block ").append(b + 1).append(": ");
                for (int c = 0; c < 4; c++) {
                    for (int r = 0; r < 4; r++) {
                        char ch = (char) state[r][c];
                        if (ch != '#')
                            result.append(ch);
                    }
                }
                result.append("\n");
            }

            outputArea.setText(result.toString());

        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, "Error: " + ex.getMessage());
        }
    }

    ////////////////////////////////////////////////////////////////

    private static void addRoundKey(byte[][] state, byte[][] keys, int round) {
        for (int c = 0; c < 4; c++)
            for (int r = 0; r < 4; r++)
                state[r][c] ^= keys[round * 4 + c][r];
    }

    private static void Byte_Sub(byte[][] state) {
        for (int r = 0; r < 4; r++)
            for (int c = 0; c < 4; c++)
                state[r][c] = (byte) SBOX[state[r][c] & 255];
    }

    private static void shiftRows(byte[][] state) {
        for (int r = 1; r < 4; r++) {
            byte[] temp = new byte[4];
            for (int i = 0; i < 4; i++)
                temp[i] = state[r][(i + r) % 4];
            state[r] = temp;
        }
    }

    private static void mixColumns(byte[][] state) {
        for (int c = 0; c < 4; c++) {
            byte a0 = state[0][c], a1 = state[1][c], a2 = state[2][c], a3 = state[3][c];
            state[0][c] = (byte) (mul2(a0) ^ mul3(a1) ^ a2 ^ a3); // as a long devision
            state[1][c] = (byte) (a0 ^ mul2(a1) ^ mul3(a2) ^ a3);
            state[2][c] = (byte) (a0 ^ a1 ^ mul2(a2) ^ mul3(a3));
            state[3][c] = (byte) (mul3(a0) ^ a1 ^ a2 ^ mul2(a3));
        }
    }

    private static byte mul2(byte b) {
        int v = (b & 255) << 1; // shift the polynomial by 1
        if ((b & 0x80) != 0) // if it exceed 128 then we need to %
            v ^= 0x1B; // the irreducible polynomial 27
        return (byte) v;
    }

    private static byte mul3(byte b) {
        return (byte) (mul2(b) ^ b);
    }

    private static final byte[][] RCON = {
            { 0x00, 0x00, 0x00, 0x00 }, { 0x01, 0x00, 0x00, 0x00 }, { 0x02, 0x00, 0x00, 0x00 },
            { 0x04, 0x00, 0x00, 0x00 }, { 0x08, 0x00, 0x00, 0x00 }, { 0x10, 0x00, 0x00, 0x00 },
            { 0x20, 0x00, 0x00, 0x00 }, { 0x40, 0x00, 0x00, 0x00 }, { (byte) 0x80, 0x00, 0x00, 0x00 },
            { 0x1b, 0x00, 0x00, 0x00 }, { 0x36, 0x00, 0x00, 0x00 }
    };

    private static byte[][] generateRoundKeys(byte[] key) {
        byte[][] w = new byte[44][4];

        for (int i = 0; i < 4; i++)
            for (int j = 0; j < 4; j++)
                w[i][j] = key[4 * i + j]; // 0 round is the original key

        for (int i = 4; i < 44; i++) { // apply rot, sub, rcon each 4 words
            byte[] temp = new byte[4];
            for (int j = 0; j < 4; j++)
                temp[j] = w[i - 1][j];
            if (i % 4 == 0) {
                temp = word_rot(temp);
                temp = word_sub(temp);
                for (int j = 0; j < 4; j++)
                    temp[j] ^= RCON[i / 4][j];
            }
            for (int j = 0; j < 4; j++)
                w[i][j] = (byte) (w[i - 4][j] ^ temp[j]); // xor the prev with the temp
        }
        return w;
    }

    private static byte[] word_rot(byte[] w) {
        return new byte[] { w[1], w[2], w[3], w[0] };
    }

    private static byte[] word_sub(byte[] w) {
        byte[] r = new byte[4];
        for (int i = 0; i < 4; i++)
            r[i] = (byte) SBOX[w[i] & 255];
        return r;
    }

    private static void decryption(byte[][] state, byte[][] keys) {
        addRoundKey(state, keys, 10);
        invShiftRows(state);
        invSubBytes(state);

        for (int round = 9; round >= 1; round--) {
            addRoundKey(state, keys, round);
            invMixColumns(state);
            invShiftRows(state);
            invSubBytes(state);
        }

        addRoundKey(state, keys, 0);
    }

    private static void invShiftRows(byte[][] state) {
        for (int r = 1; r < 4; r++) {
            byte[] temp = new byte[4];
            for (int i = 0; i < 4; i++)
                temp[i] = state[r][(i - r + 4) % 4];
            state[r] = temp;
        }
    }

    private static void invSubBytes(byte[][] state) {
        for (int r = 0; r < 4; r++)
            for (int c = 0; c < 4; c++)
                state[r][c] = (byte) INV_SBOX[state[r][c] & 0xFF];
    }

    private static void invMixColumns(byte[][] state) {
        for (int c = 0; c < 4; c++) {
            byte a0 = state[0][c], a1 = state[1][c], a2 = state[2][c], a3 = state[3][c];
            state[0][c] = (byte) (mul14(a0) ^ mul11(a1) ^ mul13(a2) ^ mul9(a3));
            state[1][c] = (byte) (mul9(a0) ^ mul14(a1) ^ mul11(a2) ^ mul13(a3));
            state[2][c] = (byte) (mul13(a0) ^ mul9(a1) ^ mul14(a2) ^ mul11(a3));
            state[3][c] = (byte) (mul11(a0) ^ mul13(a1) ^ mul9(a2) ^ mul14(a3));
        }
    }

    private static byte mul9(byte b) {
        return (byte) (mul2(mul2(mul2(b))) ^ b);// 8b+b
    }

    private static byte mul11(byte b) {
        return (byte) (mul2(mul2(mul2(b))) ^ mul2(b) ^ b);// 8b+2b+b
    }

    private static byte mul13(byte b) {
        return (byte) (mul2(mul2(mul2(b))) ^ mul2(mul2(b)) ^ b);// 8b+4b+b
    }

    private static byte mul14(byte b) {
        return (byte) (mul2(mul2(mul2(b))) ^ mul2(mul2(b)) ^ mul2(b));// 8b+4b+2b
    }


    // GUI Components
    private JFrame frame;
    private JTextArea inputTextArea;
    private JTextArea outputTextArea;
    private JTextField keyField;
    private JRadioButton encryptRadio;
    private JRadioButton decryptRadio;
    
    public DESGUI() {
        initializeGUI();
    }
    
    private void initializeGUI() {
        frame = new JFrame("DES Encryption/Decryption");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(600, 500);
        frame.setLayout(new BorderLayout());
        
        // Top Panel
        JPanel topPanel = new JPanel(new GridLayout(3, 2, 10, 10));
        topPanel.setBorder(BorderFactory.createEmptyBorder(10, 10, 10, 10));
        
        topPanel.add(new JLabel("Key (8 characters):"));
        keyField = new JTextField();
        topPanel.add(keyField);
        
        topPanel.add(new JLabel("Operation:"));
        JPanel radioPanel = new JPanel(new FlowLayout(FlowLayout.LEFT));
        encryptRadio = new JRadioButton("Encrypt", true);
        decryptRadio = new JRadioButton("Decrypt");
        ButtonGroup group = new ButtonGroup();
        group.add(encryptRadio);
        group.add(decryptRadio);
        radioPanel.add(encryptRadio);
        radioPanel.add(decryptRadio);
        topPanel.add(radioPanel);
        
        JButton processButton = new JButton("Process");
        processButton.addActionListener(new ProcessButtonListener());
        topPanel.add(new JLabel());
        topPanel.add(processButton);
        
        frame.add(topPanel, BorderLayout.NORTH);
        
        // Center Panel
        JPanel centerPanel = new JPanel(new GridLayout(2, 1, 10, 10));
        centerPanel.setBorder(BorderFactory.createEmptyBorder(10, 10, 10, 10));
        
        centerPanel.add(new JLabel("Input Text:"));
        inputTextArea = new JTextArea(5, 40);
        inputTextArea.setLineWrap(true);
        JScrollPane inputScroll = new JScrollPane(inputTextArea);
        centerPanel.add(inputScroll);
        
        centerPanel.add(new JLabel("Output Text:"));
        outputTextArea = new JTextArea(5, 40);
        outputTextArea.setLineWrap(true);
        outputTextArea.setEditable(false);
        JScrollPane outputScroll = new JScrollPane(outputTextArea);
        centerPanel.add(outputScroll);
        
        frame.add(centerPanel, BorderLayout.CENTER);
        
        // Bottom Panel
        JPanel bottomPanel = new JPanel(new FlowLayout(FlowLayout.RIGHT));
        JButton clearButton = new JButton("Clear");
        clearButton.addActionListener(e -> {
            inputTextArea.setText("");
            outputTextArea.setText("");
            keyField.setText("");
        });
        bottomPanel.add(clearButton);
        
        JButton exitButton = new JButton("Exit");
        exitButton.addActionListener(e -> System.exit(0));
        bottomPanel.add(exitButton);
        
        frame.add(bottomPanel, BorderLayout.SOUTH);
        
        frame.setVisible(true);
    }
    
    private class ProcessButtonListener implements ActionListener {
        @Override
        public void actionPerformed(ActionEvent e) {
            String key = keyField.getText();
            String inputText = inputTextArea.getText();
            
            if (key.length() != 8) {
                JOptionPane.showMessageDialog(frame, "Key must be exactly 8 characters!", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            
            if (inputText.isEmpty()) {
                JOptionPane.showMessageDialog(frame, "Please enter text to process!", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            
            try {
                String result;
                if (encryptRadio.isSelected()) {
                    result = encrypt(inputText, key);
                    outputTextArea.setText("Encrypted Text (Hex):\n" + result);
                } else {
                    result = decrypt(inputText, key);
                    outputTextArea.setText("Decrypted Text:\n" + result);
                }
            } catch (Exception ex) {
                JOptionPane.showMessageDialog(frame, "Error: " + ex.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            }
        }
    }
    
    // Main DES Methods
    public static String encrypt(String plaintext, String key) {
        List<String> blocks = splitIntoBlocks(plaintext, true);
        List<String> binaryBlocks = textToBinaryBlocks(blocks);
        String binaryKey = textToBinary(key);
        List<String> roundKeys = generateRoundKeys(binaryKey);
        
        StringBuilder finalCiphertext = new StringBuilder();
        
        for (String binaryBlock : binaryBlocks) {
            String permutedBlock = permute(binaryBlock, IP);
            
            String L = permutedBlock.substring(0, 32);
            String R = permutedBlock.substring(32, 64);
            
            for (int round = 0; round < 16; round++) {
                String LNext = R;
                String expandedR = permute(R, E);
                String xorResult = xor(expandedR, roundKeys.get(round));
                String sBoxOutput = sBoxSubstitution(xorResult);
                String pBoxOutput = permute(sBoxOutput, P);
                String RNext = xor(L, pBoxOutput);
                
                L = LNext;
                R = RNext;
            }
            
            String combined = R + L;
            String finalPermutation = permute(combined, IP_INVERSE);
            
            String hexBlock = binaryToHex(finalPermutation);
            finalCiphertext.append(hexBlock);
        }
        
        return finalCiphertext.toString();
    }
    
    public static String decrypt(String ciphertextHex, String key) {
        List<String> hexBlocks = new ArrayList<>();
        for (int i = 0; i < ciphertextHex.length(); i += 16) {
            int end = Math.min(i + 16, ciphertextHex.length());
            hexBlocks.add(ciphertextHex.substring(i, end));
        }
        
        List<String> binaryBlocks = new ArrayList<>();
        for (String hexBlock : hexBlocks) {
            StringBuilder binaryBlock = new StringBuilder();
            for (int i = 0; i < hexBlock.length(); i++) {
                String hexChar = hexBlock.substring(i, i + 1);
                int decimal = Integer.parseInt(hexChar, 16);
                binaryBlock.append(String.format("%4s", Integer.toBinaryString(decimal)).replace(' ', '0'));
            }
            // Pad to 64 bits if needed
            while (binaryBlock.length() < 64) {
                binaryBlock.append("0");
            }
            binaryBlocks.add(binaryBlock.toString());
        }
        
        String binaryKey = textToBinary(key);
        List<String> roundKeys = generateRoundKeys(binaryKey);
        Collections.reverse(roundKeys); // Reverse round keys for decryption
        
        StringBuilder finalPlaintext = new StringBuilder();
        
        for (String binaryBlock : binaryBlocks) {
            String permutedBlock = permute(binaryBlock, IP);
            
            String L = permutedBlock.substring(0, 32);
            String R = permutedBlock.substring(32, 64);
            
            for (int round = 0; round < 16; round++) {
                String LNext = R;
                String expandedR = permute(R, E);
                String xorResult = xor(expandedR, roundKeys.get(round));
                String sBoxOutput = sBoxSubstitution(xorResult);
                String pBoxOutput = permute(sBoxOutput, P);
                String RNext = xor(L, pBoxOutput);
                
                L = LNext;
                R = RNext;
            }
            
            String combined = R + L;
            String finalPermutation = permute(combined, IP_INVERSE);
            
            String textBlock = binaryToText(finalPermutation);
            finalPlaintext.append(textBlock);
        }
        
        return finalPlaintext.toString().replace("#", "");
    }
    
    // Helper Methods
    private static List<String> splitIntoBlocks(String text, boolean padding) {
        List<String> blocks = new ArrayList<>();
        for (int i = 0; i < text.length(); i += 8) {
            int end = Math.min(i + 8, text.length());
            String block = text.substring(i, end);
            
            if (padding && block.length() < 8) {
                while (block.length() < 8) {
                    block += "#";
                }
            }
            blocks.add(block);
        }
        return blocks;
    }
    
    private static List<String> textToBinaryBlocks(List<String> blocks) {
        List<String> binaryBlocks = new ArrayList<>();
        for (String block : blocks) {
            StringBuilder binary = new StringBuilder();
            for (char c : block.toCharArray()) {
                binary.append(String.format("%8s", Integer.toBinaryString(c)).replace(' ', '0'));
            }
            binaryBlocks.add(binary.toString());
        }
        return binaryBlocks;
    }
    
    private static String textToBinary(String text) {
        StringBuilder binary = new StringBuilder();
        for (char c : text.toCharArray()) {
            binary.append(String.format("%8s", Integer.toBinaryString(c)).replace(' ', '0'));
        }
        return binary.toString();
    }
    
    private static List<String> generateRoundKeys(String binaryKey) {
        String key56 = permute(binaryKey, PC1);
        String C = key56.substring(0, 28);
        String D = key56.substring(28, 56);
        
        List<String> roundKeys = new ArrayList<>();
        
        for (int i = 0; i < 16; i++) {
            C = C.substring(SHIFTS[i]) + C.substring(0, SHIFTS[i]);
            D = D.substring(SHIFTS[i]) + D.substring(0, SHIFTS[i]);
            
            String combined = C + D;
            String roundKey = permute(combined, PC2);
            roundKeys.add(roundKey);
        }
        
        return roundKeys;
    }
    
    private static String permute(String input, int[] table) {
        StringBuilder output = new StringBuilder();
        for (int position : table) {
            output.append(input.charAt(position - 1));
        }
        return output.toString();
    }
    
    private static String xor(String a, String b) {
        StringBuilder result = new StringBuilder();
        for (int i = 0; i < a.length(); i++) {
            result.append(a.charAt(i) == b.charAt(i) ? '0' : '1');
        }
        return result.toString();
    }
    
    private static String sBoxSubstitution(String input) {
        StringBuilder output = new StringBuilder();
        for (int i = 0; i < 8; i++) {
            String sixBits = input.substring(i * 6, (i + 1) * 6);
            int row = Integer.parseInt(sixBits.charAt(0) + "" + sixBits.charAt(5), 2);
            int col = Integer.parseInt(sixBits.substring(1, 5), 2);
            int value = S_BOXES[i][row][col];
            output.append(String.format("%4s", Integer.toBinaryString(value)).replace(' ', '0'));
        }
        return output.toString();
    }
    
    private static String binaryToHex(String binary) {
        StringBuilder hex = new StringBuilder();
        for (int i = 0; i < binary.length(); i += 4) {
            String fourBits = binary.substring(i, Math.min(i + 4, binary.length()));
            int decimal = Integer.parseInt(fourBits, 2);
            hex.append(Integer.toHexString(decimal).toUpperCase());
        }
        return hex.toString();
    }
    
    private static String binaryToText(String binary) {
        StringBuilder text = new StringBuilder();
        for (int i = 0; i < binary.length(); i += 8) {
            String eightBits = binary.substring(i, Math.min(i + 8, binary.length()));
            int decimal = Integer.parseInt(eightBits, 2);
            text.append((char) decimal);
        }
        return text.toString();
    }
    
    // Main method for console version
    public static void main(String[] args) {
        // Uncomment for console version
        // if (args.length > 0 && args[0].equals("console")) {
        //     consoleMain(args);
        // } else {
        //     SwingUtilities.invokeLater(() -> new DESGUI());
        // }
        
        // For GUI version
        SwingUtilities.invokeLater(() -> new DESGUI());
    }
    
    // Console version main method
    private static void consoleMain(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("=== DES Encryption/Decryption ===");
        System.out.println("1. Encryption");
        System.out.println("2. Decryption");
        System.out.print("Enter choice: ");
        int choice = scanner.nextInt();
        scanner.nextLine();
        
        System.out.print("Enter key (8 characters): ");
        String key = scanner.nextLine();
        
        if (key.length() != 8) {
            System.out.println("Error: Key must be 8 characters!");
            return;
        }
        
        if (choice == 1) {
            System.out.print("Enter plaintext: ");
            String plaintext = scanner.nextLine();
            String ciphertext = encrypt(plaintext, key);
            System.out.println("Encrypted text (Hex): " + ciphertext);
        } else if (choice == 2) {
            System.out.print("Enter ciphertext (Hex): ");
            String ciphertext = scanner.nextLine();
            String plaintext = decrypt(ciphertext, key);
            System.out.println("Decrypted text: " + plaintext);
        } else {
            System.out.println("Invalid choice!");
        }
        
        scanner.close();
    }
}
